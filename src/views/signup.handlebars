<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <form id="signup-form" class="p-5 rounded shadow bg-white">
                <h2 class="text-center mb-5">Crea tu usuario</h2>
                <div class="form-group mb-4">
                    <label for="first_name">Nombre:</label>
                    <input type="text" id="first_name" name="first_name" class="form-control" required />
                </div>
                <div class="form-group mb-4">
                    <label for="last_name">Apellido:</label>
                    <input type="text" id="last_name" name="last_name" class="form-control" required />
                </div>
                <div class="form-group mb-4">
                    <label for="birth">Fecha de nacimiento:</label>
                    <input type="date" id="birth" name="birth" class="form-control" required />
                </div>
                <div class="form-group mb-4">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required />
                </div>
                <div class="form-group mb-4">
                    <label for="password">Contrase√±a:</label>
                    <input type="password" id="password" name="password" class="form-control" required />
                </div>
                <button id="signup" type="submit" class="btn btn-primary btn-block">Ingresar</button>
            </form>
        </div>
    </div>
</div>