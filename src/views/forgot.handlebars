<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <form id="login-form" class="p-5 rounded shadow bg-white">
                <h2 class="text-center mb-5">Reinicio de contraseña</h2>
                <div class="form-group mb-4">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required />
                </div>
                <div class="form-group mb-4">
                    <label for="newPassword">Nueva Contraseña:</label>
                    <input type="password" id="newPassword" name="newPassword" class="form-control" required />
                </div>
                <div class="form-group mb-4">
                    <label for="newTwoPassword">Valide su Contraseña:</label>
                    <input type="password" id="newTwoPassword" name="newTwoPassword" class="form-control" required />
                </div>
                <button id="signup" type="submit" class="btn btn-primary btn-block">Ingresar</button>
            </form>
        </div>
    </div>
</div>